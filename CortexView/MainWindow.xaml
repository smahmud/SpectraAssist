<Window x:Class="CortexView.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="clr-namespace:CortexView"
   Title="CortexView Overlay Assistant"
   Height="400"
   Width="300"
   Topmost="True"
   WindowStyle="None"
   AllowsTransparency="True"
   Background="Transparent"
   WindowStartupLocation="Manual"
   ResizeMode="CanResize">
   <Window.InputBindings>
      <KeyBinding Command="{x:Static local:MainWindow.RequestNewInfoCmd}" Key="R" Modifiers="Control+Shift"/>    
      <KeyBinding Command="{x:Static local:MainWindow.NextSuggestionCmd}" Key="N" Modifiers="Control+Shift"/>    
      <KeyBinding Command="{x:Static local:MainWindow.ToggleCollapseCmd}" Key="O" Modifiers="Control+Shift"/>
   </Window.InputBindings>
   <Border Background="#FF202020" CornerRadius="4" BorderBrush="#FF444444" BorderThickness="1">
      <Grid x:Name="RootLayoutGrid">
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>

         <!-- Top control area -->         
         <Border Grid.Row="0" 
                    x:Name="SettingsPanelHeaderBorder" 
                    BorderBrush="#FF444444" 
                    BorderThickness="0,0,0,1" 
                    Padding="8">
                
                <StackPanel>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ToggleButton x:Name="CollapseToggleButton"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    FontWeight="Bold"
                                    Foreground="#FFFFFFFF"  BorderThickness="0"
                                    Cursor="Hand"
                                    IsChecked="True">
                           <ToggleButton.Style>
                              <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="Margin" Value="-4,0,0,0"/>

                                    <Setter Property="Content" Value="App Settings (Click to Collapse) ▲"/>
                                    <Style.Triggers>
                                       
                                       <Trigger Property="IsMouseOver" Value="True">
                                          <Setter Property="Background" Value="#AA555555"/>
                                       </Trigger>
                                       
                                       <Trigger Property="IsPressed" Value="True">
                                          <Setter Property="Background" Value="#FF333333"/>
                                       </Trigger>
                                       
                                       <Trigger Property="IsChecked" Value="False">
                                          <Setter Property="Content" Value="App Settings (Click to Expand) ▼"/>
                                       </Trigger>
                                    </Style.Triggers>
                              </Style>
                           </ToggleButton.Style>
                        </ToggleButton>
                        
                        <ToggleButton x:Name="PinToggleButton"
                                      Grid.Column="1"
                                      Content="📌"
                                      ToolTip="Toggle Always On Top (Pinned)"
                                      IsChecked="True"
                                      Width="24"
                                      Height="24"                                      
                                      Margin="0,0,8,0"
                                      Click="PinToggleButton_Click"/>

                        <TextBlock Grid.Column="2" 
                                   Text="Opacity:" 
                                   Foreground="#FFBBBBBB" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        
                        <Slider x:Name="OpacitySlider" 
                                Grid.Column="3"
                                Minimum="0.2" 
                                Maximum="1.0" 
                                Value="0.6" Width="50" 
                                SmallChange="0.05" 
                                IsSnapToTickEnabled="True" 
                                TickFrequency="0.1" 
                                VerticalAlignment="Center"
                                ValueChanged="OpacitySlider_ValueChanged"/>
                        
                        <Button Grid.Column="4" 
                                Content="X" 
                                FontWeight="Bold" 
                                Foreground="White"
                                Background="Transparent" 
                                BorderThickness="0"
                                Width="20"
                                Height="20"
                                Click="CloseButton_Click"
                                Margin="8,0,0,0"/>
                    </Grid>

                     <StackPanel x:Name="SettingsContentPanel" Margin="0,5,0,0">
                        <StackPanel.Style>
                           <Style TargetType="{x:Type StackPanel}">
                                 <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=CollapseToggleButton, Path=IsChecked}" Value="False">
                                       <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                 </Style.Triggers>
                           </Style>
                        </StackPanel.Style>

                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="Assistant Mode:" Foreground="White" Margin="0,0,0,2"/>
                            <ComboBox x:Name="AssistantModeComboBox"
                                      Foreground="Black"
                                      Background="White"
                                      DisplayMemberPath="Name"
                                      ToolTip="Select the personality and rules for the AI analysis."
                                      SelectionChanged="AssistantModeComboBox_SelectionChanged"/>
                        </StackPanel>                 
<Expander Header="Advanced Parameters" Foreground="White" Margin="0,0,0,5" IsExpanded="False">
                            <StackPanel Margin="10,0,0,0">
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Temperature:" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock x:Name="TemperatureValueLabel" Text="0.7" Foreground="White" FontSize="11" Grid.Column="1"/>
                                </Grid>
                                <Slider x:Name="TemperatureSlider" 
                                        Minimum="0.0" Maximum="1.0" Value="0.7" 
                                        SmallChange="0.1" LargeChange="0.2" TickFrequency="0.1" IsSnapToTickEnabled="True" 
                                        Margin="0,2,0,5" 
                                        ValueChanged="AdvancedParam_ValueChanged"/>

                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Top P:" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock x:Name="TopPValueLabel" Text="1.0" Foreground="White" FontSize="11" Grid.Column="1"/>
                                </Grid>
                                <Slider x:Name="TopPSlider" 
                                        Minimum="0.0" Maximum="1.0" Value="1.0" 
                                        SmallChange="0.1" LargeChange="0.2" TickFrequency="0.1" IsSnapToTickEnabled="True" 
                                        Margin="0,2,0,5" 
                                        ValueChanged="AdvancedParam_ValueChanged"/>

                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Max Tokens:" Foreground="#AAAAAA" FontSize="11"/>
                                    <TextBlock x:Name="MaxTokensValueLabel" Text="1000" Foreground="White" FontSize="11" Grid.Column="1"/>
                                </Grid>
                                <Slider x:Name="MaxTokensSlider" 
                                        Minimum="100" Maximum="4000" Value="1000" 
                                        SmallChange="100" LargeChange="500" TickFrequency="100" IsSnapToTickEnabled="True" 
                                        Margin="0,2,0,5" 
                                        ValueChanged="AdvancedParam_ValueChanged"/>
                            </StackPanel>
                        </Expander>                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="Target Window:" Foreground="White" Margin="0,0,0,2"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="WindowSelector" 
                                          Grid.Column="0"
                                          DisplayMemberPath="Title" 
                                          Foreground="Black" 
                                          Background="White"
                                          SelectionChanged="WindowSelector_SelectionChanged"/>
                                
                                <Button x:Name="RefreshWindowListButton"
                                        Grid.Column="1"
                                        Content="🔄"
                                        Width="25"
                                        Margin="5,0,0,0"
                                        ToolTip="Refresh Window List"
                                        Click="RefreshWindowListButton_Click"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock x:Name="IntervalLabel" Text="Capture Interval: 3s" Foreground="White" Margin="0,0,0,2"/>
                            <Slider x:Name="CaptureIntervalSlider" 
                                    Minimum="1" 
                                    Maximum="10" 
                                    Value="3" 
                                    IsSnapToTickEnabled="True" 
                                    TickFrequency="1"
                                    ValueChanged="CaptureIntervalSlider_ValueChanged"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock x:Name="SensitivityLabel" Text="Change Sensitivity: 10%" Foreground="White" Margin="0,0,0,2"/>
                            <Slider x:Name="ChangeSensitivitySlider" 
                                    Minimum="1" 
                                    Maximum="50" 
                                    Value="10" 
                                    IsSnapToTickEnabled="True" 
                                    TickFrequency="1"
                                    ValueChanged="ChangeSensitivitySlider_ValueChanged"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="Exclusion Mode:" Foreground="White" Margin="0,0,0,2"/>
                            <ComboBox x:Name="ExclusionModeComboBox" 
                                      IsEnabled="False" 
                                      Foreground="Black" 
                                      Background="White"
                                      SelectionChanged="ExclusionModeComboBox_SelectionChanged">
                                <ComboBoxItem Content="Dynamic Detection" IsSelected="True"/>
                                <ComboBoxItem Content="Static Mask"/>
                                <ComboBoxItem Content="Configurable Exclusion"/>
                            </ComboBox> 
                        </StackPanel>

                        <Separator Background="#444" Margin="0,10,0,10"/>
                        <TextBlock Text="Storage and Privacy" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>

                        <CheckBox x:Name="StorageEnabledCheckBox"
                                  Content="Save Screenshots Locally"
                                  Foreground="White"
                                  Margin="0,0,0,5"
                                  ToolTip="If enabled, screenshots and logs will be saved to disk."
                                  Checked="StorageEnabledCheckBox_Checked"
                                  Unchecked="StorageEnabledCheckBox_Unchecked"/>

                        <TextBlock Text="Storage Path:" Foreground="#AAAAAA" FontSize="11" Margin="0,5,0,0"/>
                        <Grid Margin="0,2,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="StoragePathTextBox"
                                     Text="MyDocuments/..."
                                     IsReadOnly="True"
                                     Foreground="Gray" Background="#222" BorderBrush="#444"
                                     Padding="2"/>
                            <Button x:Name="BrowseStorageButton"
                                    Grid.Column="1"
                                    Content="..."
                                    Width="25" Margin="5,0,0,0"
                                    ToolTip="Browse Folder..."
                                    Click="BrowseStorageButton_Click"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Retention (Days):" Foreground="#AAAAAA" FontSize="11"/>
                            <TextBlock x:Name="RetentionValueLabel" Text="7" Foreground="White" FontSize="11" Grid.Column="1"/>
                        </Grid>
                        <Slider x:Name="RetentionSlider"
                                Minimum="1" Maximum="30" Value="7"
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                Margin="0,2,0,5"
                                ValueChanged="RetentionSlider_ValueChanged"/>

                        <UniformGrid Columns="2" Margin="0,10,0,0">
                            <Button x:Name="OpenStorageButton"
                                    Content="Open Folder"
                                    Margin="0,0,5,0"
                                    Background="#444" Foreground="White" BorderThickness="0"
                                    Click="OpenStorageButton_Click"/>
                            <Button x:Name="PurgeDataButton"
                                    Content="Purge All"
                                    Margin="5,0,0,0"
                                    Background="#880000" Foreground="White" BorderThickness="0"
                                    ToolTip="DANGER: Deletes all saved images and logs."
                                    Click="PurgeDataButton_Click"/>
                        </UniformGrid>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Stretch">
                             <Button x:Name="CaptureNowButton"
                                Content="Capture Now"
                                Width="110"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Left"
                                Click="CaptureNowButton_Click"/>

                             <ToggleButton x:Name="MonitorToggleButton"
                                Content="Start Monitoring"
                                Width="130"
                                HorizontalAlignment="Left"
                                Checked="MonitorToggleButton_Checked"
                                Unchecked="MonitorToggleButton_Unchecked"/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </Border>


         <!-- Scrollable AI context/help text -->
            <Grid Grid.Row="1">
               <ScrollViewer Padding="8" VerticalScrollBarVisibility="Auto">
                  <RichTextBox x:Name="AiContextTextBox"  
                     IsReadOnly="True"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="White"
                     VerticalScrollBarVisibility="Disabled"
                     FontFamily="Segoe UI Semibold"
                     FontSize="14">
                     <FlowDocument>
                        <Paragraph>
                           <Run Text="Welcome to CortexView. Please select a window and click 'Request New Information' to begin analysis."/>
                        </Paragraph>
                     </FlowDocument>
                  </RichTextBox>
               </ScrollViewer>

               <Grid x:Name="ThinkingOverlay" Visibility="Collapsed" Background="#CC000000">
                  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                     <TextBlock Text="⚙️" FontSize="40" HorizontalAlignment="Center" Foreground="Gold" RenderTransformOrigin="0.5,0.5">
                         <TextBlock.RenderTransform>
                             <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                         </TextBlock.RenderTransform>
                         <TextBlock.Triggers>
                             <EventTrigger RoutedEvent="Loaded">
                                 <BeginStoryboard>
                                     <Storyboard>
                                         <DoubleAnimation Storyboard.TargetName="SpinnerRotate" 
                                                          Storyboard.TargetProperty="Angle" 
                                                          From="0" To="360" Duration="0:0:1" 
                                                          RepeatBehavior="Forever"/>
                                     </Storyboard>
                                 </BeginStoryboard>
                             </EventTrigger>
                         </TextBlock.Triggers>
                     </TextBlock>
                     
                     <TextBlock Text="Analyzing Context..." 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Margin="0,10,0,0"/>
                 </StackPanel>
             </Grid>
         </Grid>
      
         <Border Grid.Row="2" BorderBrush="#FF444444" BorderThickness="0,1,0,0" Padding="8">
            <Grid>   
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>                         
                  <RowDefinition Height="Auto"/>
               </Grid.RowDefinitions>

               <!-- Row # 0 RequestNewInformationButton and  / NextSuggestionButton buttons -->
               <StackPanel Grid.Row="0" Orientation="Vertical">

                  <Button x:Name="RequestNewInformationButton"
                     Content="Request New Information"
                     Margin="0,0,0,5"
                     Click="RequestNewInformationButton_OnClick" />

                  <Button x:Name="NextSuggestionButton"
                     Content="Next Suggestion"
                     Click="NextSuggestionButton_Click"/>
               </StackPanel>

               <!-- Row # 1 Status / gentle messages -->
               <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                  
                  <Ellipse x:Name="StatusIndicatorEllipse"
                           Width="8" 
                           Height="8" 
                           Fill="LimeGreen" 
                           Margin="0,0,6,0" 
                           VerticalAlignment="Center"/>

                  <TextBlock x:Name="StatusTextBlock"
                              Text="Status: Idle"
                              Foreground="#FFBBBBBB" 
                              FontSize="10" 
                              VerticalAlignment="Center"/>
               </StackPanel>

            </Grid>
         </Border>               
      </Grid>
  </Border>
</Window>
