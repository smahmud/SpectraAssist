<Window x:Class="CortexView.MainWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:md="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
   xmlns:local="clr-namespace:CortexView"
   xmlns:vm="clr-namespace:CortexView.ViewModels"
   Title="CortexView Overlay Assistant"
   Height="400"
   Width="300"
   Topmost="{Binding IsTopmost}"
   WindowStyle="None"
   AllowsTransparency="True"
   Background="Transparent"
   WindowStartupLocation="Manual"
   ResizeMode="CanResize">
   <Border Background="#FF202020" CornerRadius="4" BorderBrush="#FF444444" BorderThickness="1">
      <Grid x:Name="RootLayoutGrid">
         <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
         </Grid.RowDefinitions>

         <!-- Top control area -->         
         <Border Grid.Row="0" 
                    x:Name="SettingsPanelHeaderBorder" 
                    BorderBrush="#FF444444" 
                    BorderThickness="0,0,0,1" 
                    Padding="8">
                
                <StackPanel>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ToggleButton x:Name="CollapseToggleButton"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    FontWeight="Bold"
                                    Foreground="#FFFFFFFF"  BorderThickness="0"
                                    Cursor="Hand"
                                    IsChecked="True">
                           <ToggleButton.Style>
                              <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="Margin" Value="-4,0,0,0"/>

                                    <Setter Property="Content" Value="App Settings (Click to Collapse) ▲"/>
                                    <Style.Triggers>
                                       
                                       <Trigger Property="IsMouseOver" Value="True">
                                          <Setter Property="Background" Value="#AA555555"/>
                                       </Trigger>
                                       
                                       <Trigger Property="IsPressed" Value="True">
                                          <Setter Property="Background" Value="#FF333333"/>
                                       </Trigger>
                                       
                                       <Trigger Property="IsChecked" Value="False">
                                          <Setter Property="Content" Value="App Settings (Click to Expand) ▼"/>
                                       </Trigger>
                                    </Style.Triggers>
                              </Style>
                           </ToggleButton.Style>
                        </ToggleButton>
                        
                        <ToggleButton x:Name="PinToggleButton"
                                      Grid.Column="1"
                                      Content="📌"
                                      ToolTip="Toggle Always On Top (Pinned)"
                                      IsChecked="{Binding IsTopmost, Mode=TwoWay}"
                                      Width="24"
                                      Height="24"                                      
                                      Margin="0,0,8,0"/>

                        <TextBlock Grid.Column="2" 
                                   Text="Opacity:" 
                                   Foreground="#FFBBBBBB" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        
                        <Slider x:Name="OpacitySlider" 
                                Grid.Column="3"
                                Minimum="0.2" 
                                Maximum="1.0" 
                                Value="{Binding Opacity, Mode=TwoWay}" 
                                Width="50" 
                                SmallChange="0.05" 
                                IsSnapToTickEnabled="True" 
                                TickFrequency="0.1" 
                                VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="4" 
                                Content="X" 
                                FontWeight="Bold" 
                                Foreground="White"
                                Background="Transparent" 
                                BorderThickness="0"
                                Width="20"
                                Height="20"
                                Command="{Binding CloseCommand}"
                                Margin="8,0,0,0"/>
                    </Grid>

                     <StackPanel x:Name="SettingsContentPanel" Margin="0,5,0,0">
                        <StackPanel.Style>
                           <Style TargetType="{x:Type StackPanel}">
                                 <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=CollapseToggleButton, Path=IsChecked}" Value="False">
                                       <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                 </Style.Triggers>
                           </Style>
                        </StackPanel.Style>

                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="Assistant Mode:" Foreground="White" Margin="0,0,0,2"/>
                            <ComboBox x:Name="AssistantModeComboBox"
                                      ItemsSource="{Binding Personas}"
                                      SelectedItem="{Binding SelectedPersona, Mode=TwoWay}"
                                      Foreground="Black"
                                      Background="White"
                                      DisplayMemberPath="Name"
                                      ToolTip="Select the personality and rules for the AI analysis."/>
                        </StackPanel>                 
                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="Target Window:" Foreground="White" Margin="0,0,0,2"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox x:Name="WindowSelector" 
                                          Grid.Column="0"
                                          ItemsSource="{Binding Windows}"
                                          SelectedItem="{Binding SelectedWindow, Mode=TwoWay}"
                                          DisplayMemberPath="Title" 
                                          Foreground="Black" 
                                          Background="White"/>
                                
                                <Button x:Name="RefreshWindowListButton"
                                        Grid.Column="1"
                                        Content="🔄"
                                        Width="25"
                                        Margin="5,0,0,0"
                                        ToolTip="Refresh Window List"
                                        Command="{Binding RefreshWindowListCommand}"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="{Binding CaptureInterval, StringFormat='Capture Interval: {0}s'}" Foreground="White" Margin="0,0,0,2"/>
                            <Slider x:Name="CaptureIntervalSlider" 
                                    Minimum="1" 
                                    Maximum="10" 
                                    Value="{Binding CaptureInterval, Mode=TwoWay}" 
                                    IsSnapToTickEnabled="True" 
                                    TickFrequency="1"/>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5,0,5">
                            <TextBlock Text="{Binding ChangeSensitivity, StringFormat='Change Sensitivity: {0}%'}" Foreground="White" Margin="0,0,0,2"/>
                            <Slider x:Name="ChangeSensitivitySlider" 
                                    Minimum="1" 
                                    Maximum="50" 
                                    Value="{Binding ChangeSensitivity, Mode=TwoWay}" 
                                    IsSnapToTickEnabled="True" 
                                    TickFrequency="1"/>
                        </StackPanel>
                        
                        <Separator Background="#444" Margin="0,10,0,10"/>
                        <TextBlock Text="Storage and Privacy" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>

                        <CheckBox x:Name="StorageEnabledCheckBox"
                                  Content="Save Screenshots Locally"
                                  IsChecked="{Binding StorageEnabled, Mode=TwoWay}"
                                  Foreground="White"
                                  Margin="0,0,0,5"
                                  ToolTip="If enabled, screenshots and logs will be saved to disk."/>

                        <TextBlock Text="Storage Path:" Foreground="#AAAAAA" FontSize="11" Margin="0,5,0,0"/>
                        <Grid Margin="0,2,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="StoragePathTextBox"
                                     Text="{Binding StoragePath, Mode=OneWay}"
                                     IsReadOnly="True"
                                     Foreground="Gray" Background="#222" BorderBrush="#444"
                                     Padding="2"/>
                            <Button x:Name="BrowseStorageButton"
                                    Grid.Column="1"
                                    Content="..."
                                    Width="25" Margin="5,0,0,0"
                                    ToolTip="Browse Folder..."
                                    Command="{Binding BrowseStorageCommand}"/>
                        </Grid>

                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Retention (Days):" Foreground="#AAAAAA" FontSize="11"/>
                            <TextBlock Text="{Binding RetentionDays}" Foreground="White" FontSize="11" Grid.Column="1"/>
                        </Grid>
                        <Slider x:Name="RetentionSlider"
                                Minimum="1" Maximum="30" 
                                Value="{Binding RetentionDays, Mode=TwoWay}"
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                Margin="0,2,0,5"/>

                        <UniformGrid Columns="2" Margin="0,10,0,0">
                            <Button x:Name="OpenStorageButton"
                                    Content="Open Folder"
                                    Margin="0,0,5,0"
                                    Background="#444" Foreground="White" BorderThickness="0"
                                    Command="{Binding OpenStorageCommand}"/>
                            <Button x:Name="PurgeDataButton"
                                    Content="Purge All"
                                    Margin="5,0,0,0"
                                    Background="#880000" Foreground="White" BorderThickness="0"
                                    ToolTip="DANGER: Deletes all saved images and logs."
                                    Command="{Binding PurgeStorageCommand}"/>
                        </UniformGrid>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Stretch">
                             <Button x:Name="CaptureNowButton"
                                Content="Capture Now"
                                Width="110"
                                Margin="0,0,8,0"
                                HorizontalAlignment="Left"
                                Command="{Binding CaptureNowCommand}"/>

                             <ToggleButton x:Name="MonitorToggleButton"
                                Content="Start Monitoring"
                                Width="130"
                                HorizontalAlignment="Left"
                                IsChecked="{Binding IsMonitoring, Mode=TwoWay}"/>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </Border>


         <!-- Scrollable AI context/help text -->
            <Grid Grid.Row="1">
                <ScrollViewer Padding="8" VerticalScrollBarVisibility="Auto">
                    <md:MarkdownViewer x:Name="AiContextViewer"
                        Markdown="{Binding SuggestionText}"
                        Foreground="White"
                        Background="Transparent"
                        FontFamily="Segoe UI"
                        FontSize="14">
                        <md:MarkdownViewer.Resources>
                            <Style TargetType="{x:Type Run}" x:Key="{x:Static md:Styles.CodeStyleKey}">
                                <Setter Property="Background" Value="#333333" />
                                <Setter Property="Foreground" Value="#FFD700" /> <Setter Property="FontFamily" Value="Consolas" />
                            </Style>
                            <Style TargetType="{x:Type Border}" x:Key="{x:Static md:Styles.CodeBlockStyleKey}">
                                <Setter Property="Background" Value="#1E1E1E" /> <Setter Property="BorderBrush" Value="#444444" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="CornerRadius" Value="3" />
                                <Setter Property="Padding" Value="5" />
                                <Setter Property="Margin" Value="0,5,0,5"/>
                            </Style>
                        </md:MarkdownViewer.Resources>
                    </md:MarkdownViewer>
                </ScrollViewer>

               <Grid x:Name="ThinkingOverlay" Visibility="Collapsed" Background="#CC000000">
                  <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                     <TextBlock Text="⚙️" FontSize="40" HorizontalAlignment="Center" Foreground="Gold" RenderTransformOrigin="0.5,0.5">
                         <TextBlock.RenderTransform>
                             <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                         </TextBlock.RenderTransform>
                         <TextBlock.Triggers>
                             <EventTrigger RoutedEvent="Loaded">
                                 <BeginStoryboard>
                                     <Storyboard>
                                         <DoubleAnimation Storyboard.TargetName="SpinnerRotate" 
                                                          Storyboard.TargetProperty="Angle" 
                                                          From="0" To="360" Duration="0:0:1" 
                                                          RepeatBehavior="Forever"/>
                                     </Storyboard>
                                 </BeginStoryboard>
                             </EventTrigger>
                         </TextBlock.Triggers>
                     </TextBlock>
                     
                     <TextBlock Text="Analyzing Context..." 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                Margin="0,10,0,0"/>
                 </StackPanel>
             </Grid>
         </Grid>
      
         <Border Grid.Row="2" BorderBrush="#FF444444" BorderThickness="0,1,0,0" Padding="8">
            <Grid>   
               <Grid.RowDefinitions>
                  <RowDefinition Height="Auto"/>                         
                  <RowDefinition Height="Auto"/>
               </Grid.RowDefinitions>

               <!-- Row # 0 RequestNewInformationButton and  / NextSuggestionButton buttons -->
               <StackPanel Grid.Row="0" Orientation="Vertical">

                  <Button x:Name="RequestNewInformationButton"
                     Content="Request New Information"
                     Margin="0,0,0,5"
                     Command="{Binding CaptureNowCommand}" />

                  <Button x:Name="NextSuggestionButton"
                     Content="Next Suggestion"
                     Command="{Binding NextSuggestionCommand}"/>
               </StackPanel>

               <!-- Row # 1 Status / gentle messages -->
               <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                  
                  <Ellipse x:Name="StatusIndicatorEllipse"
                           Width="8" 
                           Height="8" 
                           Fill="LimeGreen" 
                           Margin="0,0,6,0" 
                           VerticalAlignment="Center"/>

                  <TextBlock x:Name="StatusTextBlock"
                              Text="{Binding StatusText}"
                              Foreground="#FFBBBBBB" 
                              FontSize="10" 
                              VerticalAlignment="Center"/>
               </StackPanel>

            </Grid>
         </Border>               
      </Grid>
  </Border>
</Window>
